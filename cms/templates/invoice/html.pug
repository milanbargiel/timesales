include signature.pug
doctype html
head
  meta(charset='utf-8')
  title Invoice #{order.invoiceId}
  style.
    /* General styles */
    @font-face {
    font-family: Kalice;
    src: url(./Kalice-Regular.otf) format("opentype");
    font-weight: 400;
    }
    table {
    width: 100%;
    border-collapse: collapse;
    }
    td,
    th {
    text-align: left;
    }
    /* Element styles */
    .invoice-box {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 30px;
    line-height: 1.3;
    font-family: Arial, sans-serif;
    font-size: 11px;
    color: black;
    }

    /* TITLE */
    .title-box {
    margin-bottom: 50px;
    text-align: center;
    }
    .title {
    font-family: Arial Black, sans-serif;
    font-size: 52px;
    border-bottom: 2px solid black;
    line-height: 1;
    }
    .subtitle {
    font-family: 'Kalice', sans-serif;
    font-size: 18px;
    display: block;
    }

    /* HEADER CONTAINER */
    .header {
    overflow: auto;
    margin-bottom: 50px;
    }
    .left {
    float: left;
    }
    .right {
    float: right;
    }
    .thank-you {
    margin-top: 100px;
    }
    .bold {
    font-family: Arial, sans-serif;
    font-weight: 700;
    }

    /* TABLE */
    .table {
    margin-bottom: 70px;
    }
    .table-last-row td {
    padding-top: 10px;
    }
    /* underline sum with two borders */
    .sum {
    border-top: 1px solid black;
    position: relative;
    }
    .sum:before {
    border-top: 1px solid black;
    content: "";
    display: block;
    position: absolute;
    top: 1px;
    left: 0;
    right: 0;
    }
    .sum:after {
    content: "";
    width:30%;
    height:5px;
    background-color: white;
    position: absolute;
    right:0;
    top:-2px;
    }

    /* QR CODE */
    .link-box {
    overflow:hidden; /* clearfix */
    margin-bottom: 12px;
    }
    .qr-code {
    margin-right: 12px;
    float: left;
    width: 70px;
    height: 70px;
    background-color: grey;
    }
    .qr-explain-box {
    width: calc(100% - 82px);
    float: right;
    }
    .qr-explain {
    /* Position text at the bottom */
    display: table-cell;
    height: 70px;
    vertical-align: bottom;
    }

    /* SIGNATURE & FOOTER */
    .signature-box {
    text-align: center;
    margin-bottom: 50px;
    }
    .signature {
    width: 200px;
    }
    .footer td {
    padding-bottom: 6px;
    }
    .footer td:second-child {
    text-align: center;
    }
    .footer td:last-child {
    text-align: right;
    }

.invoice-box
  .title-box
    div.title Time Sales Online
    div.subtitle  World leaders in the time business since 2018
  .header
    .left
      div
        div.bold To:
        if customerAddress
          | #{customerAddress.name}
          br
          | #{customerAddress.line1}
          if customerAddress.line2
            br
            | #{customerAddress.line2}
          br
          | #{customerAddress.postal_code} #{customerAddress.city}
          br
          | #{customerAddress.country}
          br
        else
          | #{order.orderName}
          br
          | #{order.orderEmail}
      div.thank-you
        div.bold Invoice
        | Thank you for your purchase at Time Sales Online.
        br
        | The payment has been accepted.
    .right
      div.bold Date
      |  #{createdAt}
      br
      br
      div.bold Order ID
      | #{order.invoiceId}
      br
      br
      div.bold Address
      | Teichstraße 16e
      br
      | 50827 Köln
      br
      br
      div.bold Contact us
      | hello@timesales.ltd    
  table.table
    tr
      td.bold #{response.orderSummary}
      td
      td.bold #{price}
    tr
      td
      td (+ 7 % Mwst.)
      td #{tax}
    tr.table-last-row
      td
      td Total:
      td.bold.sum #{priceTotal}
  .link-box
    div.qr-code
      | !{qrcode}
    div.qr-explain-box
      div.qr-explain
        | To access your custom time stream, scan this code or follow the link from the E-Mail that we have send to you.
  | On behalf of Time Sales Online
  br
  br
  br
  br
  .signature-box
    +svg-signature(fill="blue", width="120", height="50")
    span.subtitle Thank you for your trust.
  .footer
    table
      tr
        td USt-IdNr.: #{bankInfo.taxId}
        td IBAN: #{bankInfo.iban}
        td BIC: #{bankInfo.bic}
